<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DependencyServices.MainPage"
             xmlns:effects="clr-namespace:DependencyServices.Effects">

    <StackLayout HorizontalOptions="CenterAndExpand">
        <Button Text="Get Orientation" Command="{Binding OrientationCommand}" />
        <!--<Label Text="{Binding PhoneOrientation}" />-->
        <Entry Placeholder="Presioname!" >
            <Entry.Effects>
                <effects:FocusEffect />
            </Entry.Effects>
        </Entry>
        <Entry Text="{Binding PhoneOrientation}" />
    </StackLayout>

</ContentPage>
